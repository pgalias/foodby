{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationDir": "./dist",
    "jsx": "react-jsx"
  },
  "include": ["./src"],
  "exclude": [
    "node_modules",
    "./src/**/*.stories.tsx",
    "./src/**/*.test.tsx",
    "./src/__mocks__/**/*.ts",
    "./src/setupTests.ts"
  ]
}
